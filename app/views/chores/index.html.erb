<h1>Chores</h1>

<p><%= link_to 'Add a New Chore', new_chore_url %></p>

<table>
  <thead>
    <tr>
      <th>Task haver</th>
      <th>Student</th>
      <th>Type of chore</th>
      <th>Description of chore</th>
      <th>Review of student</th>
      <th>Review of task haver</th>
      <th>Ask price</th>
      <th>Price</th>
      <th>Complete by</th>
      <th>Active</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @chores.each do |chore| %>
    <tr>
      <td><%= chore.task_haver_id %></td>
      <td><%= chore.student_id %></td>
      <td><%= chore.type_of_chore %></td>
      <td><%= chore.description_of_chore %></td>
      <td><%= chore.review_of_student %></td>
      <td><%= chore.review_of_task_haver %></td>
      <td><%= chore.ask_price %></td>
      <td><%= chore.price %></td>
      <td><%= chore.complete_by %></td>
      <td><%= chore.active %></td>
      <td><%= link_to 'Show', chore_url(chore) %></td>
      <td><%= link_to 'Edit', edit_chore_url(chore) %></td>
      <td><%= link_to 'Destroy', chore_url(chore), method: 'delete', data: { confirm: "Do you really want to delete this chore?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

