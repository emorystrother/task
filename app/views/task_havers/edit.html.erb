<h1>Editing Task Haver #<%= @task_haver.id %></h1>

<%= form_tag(task_haver_url(@task_haver), method: 'patch') do %>
  <div>
    <%= label_tag :first_name %><br />
    <%= text_field_tag :first_name, @task_haver.first_name %>
  </div>

  <div>
    <%= label_tag :last_name %><br />
    <%= text_field_tag :last_name, @task_haver.last_name %>
  </div>

  <div>
    <%= label_tag :address %><br />
    <%= text_field_tag :address, @task_haver.address %>
  </div>

  <div>
    <%= label_tag :image %><br />
    <%= text_field_tag :image, @task_haver.image %>
  </div>

  <div>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, @task_haver.email %>
  </div>

  <div>
    <%= label_tag :cell_phone %><br />
    <%= text_field_tag :cell_phone, @task_haver.cell_phone %>
  </div>

  <div>
    <%= submit_tag "Update Task Haver" %>
  </div>
<% end %>
